<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="ADD BOOK"
        android:textSize="40sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/judul"
        android:layout_centerHorizontal="true"
        android:id="@+id/foto"
        app:cardCornerRadius="75dp"
        app:cardElevation="8dp">

        <ImageView
            android:id="@+id/addPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_add_photo_alternate_24"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/addImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note: Isi Image dulu!"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/foto"/>

    <EditText
        android:id="@+id/addNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addImage"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="Nama"
        android:padding="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/addPanggilan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addNama"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="Nama Panggilan"
        android:padding="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/addEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addPanggilan"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawablePadding="10dp"
        android:hint="EMAIL"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/addAlamat"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/addEmail"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round"
        android:drawableStart="@drawable/baseline_location_on_24"
        android:drawablePadding="10dp"
        android:hint="Alamat"
        android:padding="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/addTglLahir"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/addAlamat"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round"
        android:drawableStart="@drawable/baseline_calendar_month_24"
        android:drawablePadding="10dp"
        android:hint="Tanggal Lahir"
        android:padding="20dp"
        android:inputType="date"
        android:focusable="false"
        android:clickable="true"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/addNotelp"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/addTglLahir"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round"
        android:drawableStart="@drawable/baseline_local_phone_24"
        android:drawablePadding="10dp"
        android:hint="Nomor Telephon"
        android:padding="20dp"
        android:inputType="phone"
        android:textColor="@color/black"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_done_24"
        app:backgroundTint="@color/white"/>

</RelativeLayout>